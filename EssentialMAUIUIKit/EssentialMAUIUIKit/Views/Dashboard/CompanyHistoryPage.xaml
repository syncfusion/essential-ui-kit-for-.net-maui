<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EssentialMAUIUIKit.Views.Dashboard.CompanyHistoryPage"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:local="clr-namespace:EssentialMAUIUIKit">
    <ContentView.BindingContext>
        <local:CompanyHistoryViewModel/>
    </ContentView.BindingContext>
    <ContentView.Resources>
        <local:EvenOddConverter x:Key="EvenOddConverter" />
        <Style x:Key="BorderStyleLeft" TargetType="Border">
            <Style.Triggers>
                <!-- Check if Index is odd (false) -->
                <DataTrigger TargetType="Border" Binding="{Binding Index, Converter={StaticResource EvenOddConverter}}" Value="false">
                    <Setter Property="IsVisible" Value="True" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LineStyleLeft" TargetType="Border">
            <Style.Triggers>
                <!-- Check if Index is odd (false) -->
                <DataTrigger TargetType="Border" Binding="{Binding Index, Converter={StaticResource EvenOddConverter}}" Value="false">
                    <Setter Property="IsVisible" Value="{OnPlatform Android=True,iOS=True, Default=False}" />
                </DataTrigger>
                <DataTrigger TargetType="Border" Binding="{Binding IsFirstItem}" Value="True" >
                    <Setter Property="IsVisible"  Value="False">
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="BorderStyleRight" TargetType="Border">
            <Style.Triggers>
                <!-- Check if Index is odd (false) -->
                <DataTrigger TargetType="Border" Binding="{Binding Index, Converter={StaticResource EvenOddConverter}}" Value="true">
                    <Setter Property="IsVisible" Value="True" />
                </DataTrigger>
            </Style.Triggers>            
        </Style>
        <Style x:Key="LineStyleRight" TargetType="Border">
            <Style.Triggers>
                <!-- Check if Index is odd (false) -->
                <DataTrigger TargetType="Border" Binding="{Binding Index, Converter={StaticResource EvenOddConverter}}" Value="true">
                    <Setter Property="IsVisible" Value="True" />
                </DataTrigger>
                <DataTrigger TargetType="Border" Binding="{Binding IsLastItem}" Value="True">
                    <Setter Property="IsVisible">
                        <OnPlatform x:TypeArguments="x:Boolean">
                            <On Platform="Android" Value="False" />
                            <On Platform="iOS" Value="False" />
                            <On Platform="WinUI" Value="True" />
                            <On Platform="MacCatalyst" Value="True" />
                        </OnPlatform>
                    </Setter>
                   
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </ContentView.Resources>
    <StackLayout>
        <Grid HeightRequest="{OnPlatform WinUI=60,MacCatalyst=60}" Padding="0,10,24,10" IsVisible="{OnPlatform Android=False, iOS=False}">
            <Image Source="{Binding CompanyLogo}"  HeightRequest="32" WidthRequest="32" VerticalOptions="Center" HorizontalOptions="Start" Margin="{OnPlatform WinUI='24,0,0,0', MacCatalyst='24,0,0,0'}"/>

            <!-- Notification Bell Icon with Badge -->
            <syncfusion:SfBadgeView HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,99,0" IsVisible="{OnPlatform Android=False, iOS=False}">
                <syncfusion:SfBadgeView.Content>
                    <Label Text="&#xe708;" FontFamily="DashboardFontIcons" HeightRequest="16" WidthRequest="16"  />
                </syncfusion:SfBadgeView.Content>
            </syncfusion:SfBadgeView>

            <!-- Profile Image Avatar -->
            <syncfusion:SfAvatarView ContentType="Custom" AvatarSize="Medium" AvatarShape="Circle" ImageSource="{Binding ProfileImage}" HorizontalOptions="End" Background="White" Margin="0,0,24,0" IsVisible="{OnPlatform Android=False, iOS=False}"/>
        </Grid>
        <BoxView HeightRequest="1" Color="{AppThemeBinding Light={DynamicResource SeparatorColorLight}, Dark={DynamicResource SeparatorColorDark}}" HorizontalOptions="Fill" />
        <Grid RowDefinitions="*" VerticalOptions="FillAndExpand" ColumnDefinitions="*" HorizontalOptions="FillAndExpand" Margin="{OnPlatform Android='0,10,10,0', iOS='0,10,10,0'}">
            <ScrollView Grid.Row="0">
                <Grid ColumnDefinitions="{OnPlatform WinUI='Auto,Auto,*', MacCatalyst='Auto,Auto,3*'}" RowDefinitions="*" VerticalOptions="FillAndExpand" Background="{AppThemeBinding Light={DynamicResource BackgroundColorLight}, Dark={DynamicResource BackgroundColorDark}}">
                    <!-- First Layout with Width 257 and Height 769 -->
                    <Grid Grid.Column="0" VerticalOptions="StartAndExpand" HorizontalOptions="Start" IsVisible="{OnPlatform Android=False, iOS=False}" WidthRequest="{OnPlatform MacCatalyst=350}" Background="{AppThemeBinding Light={DynamicResource BackgroundColorLight}, Dark={DynamicResource BackgroundColorDark}}">
                        <VerticalStackLayout>
                            <CollectionView ItemsSource="{Binding MenuItemList}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="10" Stroke="Transparent">
                                            <!-- Menu Item Text -->
                                            <Label Text="{Binding Name}" FontSize="16" TextColor="{AppThemeBinding Light={DynamicResource PrimaryTextColorLight}, Dark={DynamicResource PrimaryTextColorDark}}" VerticalOptions="Center" Margin="0,0,5,0">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label" Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="TextColor" Value="{StaticResource PrimaryFormsColor}" />
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Grid>
                    <BoxView Grid.Column="{OnPlatform WinUI='1',MacCatalyst='1'}"  WidthRequest="1" Color="{AppThemeBinding Light={DynamicResource SeparatorColorLight}, Dark={DynamicResource SeparatorColorDark}}" HorizontalOptions="Start" VerticalOptions="FillAndExpand" IsVisible="{OnPlatform Android=False, iOS=False}"/>
                    <Grid Grid.Column="{OnPlatform WinUI='2',MacCatalyst='2'}" Grid.Row="{OnPlatform Android='0', iOS='0'}" VerticalOptions="{OnPlatform WinUI=FillAndExpand, MacCatalyst=Fill, Android=Start,iOS=Start}">

                        <Grid Grid.Row="0" RowDefinitions="Auto,*, *, *" VerticalOptions="Start" Background="{AppThemeBinding Light={DynamicResource BackgroundColorLight}, Dark={DynamicResource BackgroundColorDark}}">
                            <Grid Grid.Row="0" Margin="16,0,16,0" HeightRequest="72" Background="{AppThemeBinding Light={DynamicResource BackgroundColorLight}, Dark={DynamicResource BackgroundColorDark}}">
                                <HorizontalStackLayout Grid.Column="0" HorizontalOptions="Start" HeightRequest="{OnPlatform WinUI=28, MacCatalyst=28}" VerticalOptions="Center">
                                    <Label Text="{Binding PageTitle}" FontSize="{OnPlatform WinUI='22', MacCatalyst='22',Android='16', iOS='16'}" FontFamily="{OnPlatform WinUI='Roboto-Regular', Android='Roboto-Medium', iOS='Roboto-Medium'}" TextColor="{AppThemeBinding Light={DynamicResource PrimaryTextColorLight}, Dark={DynamicResource PrimaryTextColorDark}}" VerticalOptions="Start"/>
                                </HorizontalStackLayout>
                            </Grid>
                            <BoxView Grid.Row="1" HeightRequest="1" HorizontalOptions="FillAndExpand" Margin="0,0,0,0" Color="{AppThemeBinding Light={DynamicResource SeparatorColorLight}, Dark={DynamicResource SeparatorColorDark}}" VerticalOptions="Start" IsVisible="{OnPlatform Android=False,iOS=False}"/>
                            <Grid Grid.Row="2" HeightRequest="{OnPlatform WinUI=60,MacCatalyst=60}" VerticalOptions="Start" HorizontalOptions="StartAndExpand" Margin="{OnPlatform WinUI='16,32,16,0',MacCatalyst='16,32,16,0', Android='16,16,16,16', iOS='16,16,16,16'}">
                                <Label  Text="{Binding PageDescription}" TextColor="{AppThemeBinding Light={DynamicResource ContentTextColorLight}, Dark={DynamicResource ContentTextColorDark}}"  FontFamily="Roboto-Regular" FontSize="16" />
                            </Grid>
                            <Grid Grid.Row="3" VerticalOptions="Fill" HorizontalOptions="Fill">
                                <CollectionView ItemsSource="{Binding CompanyHistoryDetails}" SelectionMode="None">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <VerticalStackLayout>

                                                <Grid ColumnDefinitions="{OnPlatform WinUI='Auto,Auto,Auto',MacCatalyst='Auto,Auto,Auto'}" HorizontalOptions="Center" VerticalOptions="Fill" Margin="{OnPlatform Android='8,0,8,0', iOS='8,0,8,0'}">
                                                    <!-- Left Border -->
                                                    <Grid Grid.Column="{OnPlatform WinUI=0, MacCatalyst=0}" HorizontalOptions="Start" WidthRequest="{OnPlatform WinUI='324',MacCatalyst='324'}" HeightRequest="136" Margin="{OnPlatform Default='16,0,0,0',iOS='0,0,0,0'}" Background="{AppThemeBinding Light={DynamicResource BackgroundColorLight}, Dark={DynamicResource BackgroundColorDark}}">
                                                        <Border Style="{StaticResource BorderStyleLeft}" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Background="#7633DA" HeightRequest="2" WidthRequest="{OnPlatform Android='280', iOS='280'}" BackgroundColor="#7633DA" Stroke="#7633DA" Margin="0,0,-2,0" IsVisible="False"/>
                                                        <Border Style="{StaticResource BorderStyleLeft}" VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand" Background="#7633DA" HeightRequest="{OnPlatform Android=136, iOS=136}" WidthRequest="{OnPlatform Android='2', iOS='2'}" BackgroundColor="#7633DA" Stroke="#7633DA" Margin="0,134,43,0" IsVisible="False"/>
                                                        <Border Style="{StaticResource LineStyleLeft}" VerticalOptions="FillAndExpand" HorizontalOptions="StartAndExpand" Background="#7633DA" HeightRequest="{OnPlatform Android=136, iOS=136}" WidthRequest="{OnPlatform Android='2', iOS='2'}" BackgroundColor="#7633DA" Stroke="#7633DA" Margin="32,-40,0,0" IsVisible="False"/>
                                                        
                                                        <Border Style="{StaticResource BorderStyleLeft}" Stroke="#7633DA" VerticalOptions="FillAndExpand" StrokeThickness="2" Margin="0,0,100,0" Padding="10" Background="#7633DA" IsVisible="False">
                                                            <VerticalStackLayout>
                                                                <Label Text="{Binding Year}" TextColor="#FFFFFF" FontFamily="{OnPlatform WinUI='Roboto-Thin', MacCatalyst='Roboto-Thin', Android='Roboto-Regular', iOS='Roboto-Regular'}" FontAttributes="Bold" FontSize="16" />
                                                                <Label Text="{Binding Achievements}" TextColor="#FFFFFF" FontFamily="{OnPlatform WinUI='Roboto-Thin', MacCatalyst='Roboto-Thin', Android='Roboto-Regular', iOS='Roboto-Regular'}" Margin="0,8,0,0" />
                                                            </VerticalStackLayout>  
                                                        </Border>
                                                    </Grid>

                                                    <!-- Middle Vertical Line -->
                                                    <Grid Grid.Column="{OnPlatform WinUI='1', MacCatalyst='1'}" WidthRequest="14" VerticalOptions="FillAndExpand" IsVisible="{OnPlatform Android=False, iOS=False}">
                                                        <Border VerticalOptions="FillAndExpand"   WidthRequest="14" HeightRequest="14" Stroke="#7633DA" BackgroundColor="#7633DA" HorizontalOptions="Center">
                                                            <Border.StrokeShape>
                                                                <RoundRectangle CornerRadius="50" />
                                                            </Border.StrokeShape>                                                            
                                                        </Border>
                                                        <Border VerticalOptions="FillAndExpand" HorizontalOptions="Center" WidthRequest="2" BackgroundColor="#7633DA" Stroke="#7633DA" />
                                                    </Grid>

                                                    <!-- Right Border -->
                                                    <Grid Grid.Column="{OnPlatform WinUI='2', MacCatalyst='2'}" WidthRequest="{OnPlatform WinUI='324',MacCatalyst='324'}" HeightRequest="136" Margin="0,16,0,16">
                                                        <Border Style="{StaticResource LineStyleRight}" Background="#7633DA" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" HeightRequest="2" WidthRequest="{OnPlatform Android='280', iOS='280'}" BackgroundColor="Transparent" Stroke="Transparent" Margin="{OnPlatform Default='-6,0,0,0',iOS='-16,0,0,0'}" IsVisible="False"/>
                                                        <Border Style="{StaticResource BorderStyleRight}" VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand" Background="#7633DA" HeightRequest="{OnPlatform Android=136, iOS=136}" WidthRequest="{OnPlatform Android='2'}" BackgroundColor="#7633DA" Stroke="#7633DA" Margin="0,-43,43,0" IsVisible="False"/>
                                                        <Border Style="{StaticResource LineStyleRight}" VerticalOptions="Center" HorizontalOptions="StartAndExpand" Background="#7633DA" HeightRequest="{OnPlatform Android=136, iOS=136}" WidthRequest="{OnPlatform Android='2'}" BackgroundColor="#7633DA" Stroke="#7633DA" Margin="{OnPlatform Default='48,135,0,0', iOS='32,135,0,0'}" IsVisible="False"/>

                                                        <Border Style="{StaticResource BorderStyleRight}" Background="{AppThemeBinding Dark={DynamicResource ReceivedMessageColorDark}, Light={DynamicResource ReceivedMessageColorLight}}" Stroke="Transparent" StrokeThickness="0" Margin="100,0,0,0" Padding="10" IsVisible="False">
                                                            <VerticalStackLayout>
                                                                <Label Text="{Binding Year}" TextColor="{AppThemeBinding Light={DynamicResource PrimaryTextColorLight}, Dark={DynamicResource PrimaryTextColorDark}}" FontFamily="{OnPlatform WinUI='Roboto-Thin', MacCatalyst='Roboto-Thin', Android='Roboto-Regular', iOS='Roboto-Regular'}" FontAttributes="Bold" FontSize="16" />
                                                                <Label Text="{Binding Achievements}" TextColor="{AppThemeBinding Light={DynamicResource PrimaryTextColorLight}, Dark={DynamicResource PrimaryTextColorDark}}" FontFamily="{OnPlatform WinUI='Roboto-Thin', MacCatalyst='Roboto-Thin', Android='Roboto-Regular', iOS='Roboto-Regular'}" FontSize="14" Margin="0,8,0,0" />
                                                            </VerticalStackLayout>                                                           
                                                        </Border>
                                                    </Grid>
                                                </Grid>                             
                                            </VerticalStackLayout>                                           
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>                                
                            </Grid>
                        </Grid>
                    </Grid>               
                </Grid>
            </ScrollView>
        </Grid>
    </StackLayout>
</ContentView>
